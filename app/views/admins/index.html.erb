<div class="panel panel-primary">
  <div class="panel-heading"><h2>Former pairings</h2> </div>

    <div class="panel-body">
      <ul>
      <% previous_date = nil %>
    <% @matches.each do |match| %>
      <% if match.date.to_date != previous_date %>
        <li>
          <%= match.date.to_date%>
        </li>
      <%end%>
        <li>
           <%= match.user.name %> was paired with <%= match.matched_user%>
        </li>
          <% previous_date = match.date.to_date %>
    <% end %>
      </ul>

    <p> Today's Matches: </p>

    <% @matches.each do |match| %>
      <% if match.date == Date.today %>
        <p>
          <%= match.matched_user %> and <%= match.user.name %>
        </p>
      <% else %>
        <p>

        </p>
      <% end %>
    <% end %>

    </div>
</div>

<div>
  Class roster:
    <% @users.each do | user | %>
      <p>
      <% if user.admin == true %>
        <%= user.name %> is an admin
      <% else %>
        <%= user.name %> is not an admin
      <% end %>
        <%= link_to user.name, admin_path(user.id), class: " btn btn-default" %>
      </p>
      <% end %>

</div>
<div>
  <% @dates.each do | date | %>
    <p>
      <%= link_to date.to_date, admins_path(date: date.to_date), method: :create %>
    </p>
    <% end %>

</div>

<div>
  <%= link_to "Log out", destroy_user_session_path, method: :delete,  class: " btn btn-default"%></li>
</div>
